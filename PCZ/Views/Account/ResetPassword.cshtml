
@{
    ViewBag.Title = "Reset Password";
}



<h4 class="py-2 font-weight-bold text-center">Set New Password</h4>
<div class="row">
    <div class=" col-md-2 col-lg-3"></div>

    <div class="col-sm-12 col-md-8 col-lg-6">
        <div class="card p-5">

            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post)) {

                 @Html.TextBox("email", null, new { @class = "form-control", @required = "required", @placeholder = "Email" })

                <label>@ViewBag.emMsg</label>

                @Html.TextBox("code", null, new { @class = "form-control", @required = "required", @placeholder = "Reset Code"  })
                <br />
                @Html.TextBox("password", null, new { @class = "form-control", @type = "password", @required = "required", @placeholder = "New Password" });
                <br />
                <div class="text-center pt-3">
                    <label class="text-danger">@ViewBag.message </label>
                    <input type="submit" class="btn checkoutBtn btn-primary shadow" value="Reset Password" />
                </div>
            }
            <div class="text-center pt-3">

                <a href="@Url.Action("Login", "Session")" class="card-link">Login</a>
            </div>
        </div>
    </div>
    <div class=" col-md-2 col-lg-3"></div>

</div>
