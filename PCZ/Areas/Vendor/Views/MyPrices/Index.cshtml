@model PCZ.ViewModels.IssuesVM
@{
    ViewBag.Title = "My Prices";
}

<h3> My Prices</h3>
<br />
<div class="div-section">

    <div class="div-section-heading"><h4> </h4></div>

    <div class="row div-body">
        <div class="col-sm-12">

            <table class="table table-striped table-bordered table-responsive" id="dtTbl">
                <thead>
                    <tr>
                        <th width="20%">Device</th>
                        <th width="12%">Device Type</th>
                        <th width="43%">Problem Description</th>
                        <th width="15%">Delivery Time</th>
                        <th width="8%">Trade Cost</th>
                        <th width="7%">Cost</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dt in Model.Issues) {
                        <tr>
                            <td>@dt.Device.Brand.Name @dt.Device.Name</td>
                            <td>@dt.Device.Brand.DeviceType.Name</td>
                            <td>@dt.Description</td>
                            <td>@dt.DeliveryTime</td>
                            <td>@dt.TradePrice</td>
                            <td>@dt.Price</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
