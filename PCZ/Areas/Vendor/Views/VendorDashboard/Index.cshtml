    var callFlag = "";


    $(document).ready(function () {
        myAjaxCall();
        window.setInterval(function () {
            myAjaxCall();
        }, 10000);
        callFlag = true;
    });

    function myAjaxCall() {
        console.log(`Call Flag Value :: ${callFlag}`)
        if (callFlag) {
          $.ajax({
            type: "GET",
            url:'@Url.Action("GetMessages", "VendorDashboard")',
            data: null,
              success: function (e) {
                  var node = document.getElementById('chatBoxView').innerHTML;
                  node = node.replace('\n', '');
                  node = node.replace(/\s+/g, '');
                  var ee = e.replace(/\s+/g, '');

                  if (node === ee) {
                      console.log("Chat box same");
