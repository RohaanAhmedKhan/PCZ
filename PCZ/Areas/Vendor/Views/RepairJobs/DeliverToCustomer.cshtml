@model PCZ.ViewModels.DeliverToCustomerViewModal
@{
    ViewBag.Title = "Pending Delivery Jobs";
}

<div class="container bg-white">
    <div class="row mt-5 " style="margin-top:3%;">
        <div class="col-md-12 col-sm-12 col-lg-12 col-12">
            <h2 class="underline mb-4"><b> Deliver To Customer :</b></h2>
            @using (Html.BeginForm("DeliverToCustomer", "RepairJobs", FormMethod.Post, new { @enctype = "multipart/form-data" }))
            {

                <table class="table" style="width:50%; margin-top:1%;">
                    <tr>
                        <td><h4> Invoice Number : </h4></td>
                        <td>@Html.TextBoxFor(x => x.jobNo, new { @readonly = "readonly", @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <td><h4>Deliver : </h4></td>
                        <td>@Html.CheckBoxFor(x => x.Deliver, new { @class = "form-control" })</td>
                    </tr>
                    <tr>
                        <td><h4>Date :</h4></td>
                        <td> @Html.TextBoxFor(x => x.date, new { @class = "form-control", @type = "date", @Value = Model.date.ToString("yyyy-MM-dd") })</td>
                    </tr>
                </table>
                <button type="submit" class="btn-primary">SAVE</button>
            }
        
        </div>
    </div>

</div>



