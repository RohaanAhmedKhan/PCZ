@model PCZ.ViewModels.HistoryViewModal
@{
    ViewBag.Title = "Payment";

}
<div class="div-section">
    <div class="div-section-heading"><h4>Payment</h4></div>

    <div class="row div-section-body">

        @*<div class="col-lg-2">
                <label style="margin:0px auto">  </label>
            </div>*@

        <div class="col-sm-4">
            <table class="table table-responsive table-hover" id="tblQualifications">
                <thead>
                    <tr>
                        <td></td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><h4><label>My Invoice Balance</label></h4> </td>
                        <td>
                            <h4> <label id="invoiceBalance"> £@Model.actualBalance</label></h4>
                        </td>
                    </tr>
                    <tr>
                        <td><h4><label>Total Paid Amount</label></h4> </td>
                        <td>
                            <h4> <label id="paidBalance"> £@Model.paidBalance</label></h4>
                        </td>
                    </tr>
                    <tr>
                        <td><h4><label>Remaining Balance</label></h4> </td>
                        <td>
                            <h4>  <label id="remainingBalance"> £@Model.remainingBalance</label></h4>
                        </td>
                    </tr>
            </table>

        </div>

    </div>


    <div class="div-section">
        <div class="div-section-heading"><h4>All Jobs Payments</h4></div>

        <div class="row div-section-body">
            <div class="col-sm-12" style="padding:0 !important">

                <table class="table table-striped table-bordered table-responsive" id="dtTbl">
                    <thead>
                        <tr>
                            <th width="10%">Invoice No</th>
                            <th width="13%">Customer Name</th>
                            <th width="7%">Customer Phone</th>
                            <th width="15%">Customer Email</th>
                            <th width="10%">Device</th>
                            <th width="7%">Trade Cost</th>
                            <th width="10%">Date</th>
                            <th width="10%">Note</th>
                            <th width="10%">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dt in Model.jobs)
                        {
                            string dtl = "/Vendor/RepairJobs/Invoice/?no=" + dt.JobNo;
                            <tr data-href="@dtl" class="clk_index_table">
                                <td>@dt.JobNo</td>
                                <td>@dt.CustomerName</td>
                                <td>@dt.CustomerPhone</td>
                                <td>@dt.CustomerEmail</td>
                                <td>@dt.Device.Brand.Name @dt.Device.Name</td>
                                <td>@dt.TotalCost.ToString("N0")</td>
                                <td>@dt.SubmitDate</td>
                                <td>@dt.Note</td>
                                <td>@dt.Status</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>