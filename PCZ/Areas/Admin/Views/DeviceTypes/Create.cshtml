@model PCZ.ViewModels.DeviceTypesVM
@{
    ViewBag.Title = "Create";
}


@if (Model != null && Model.ErrorMessage != null) {<label style="color:red"><b>Error: </b> @Model.ErrorMessage</label>}

@using (Html.BeginForm("Create", "DeviceTypes", FormMethod.Post, new { })) {
    <div class="div-section">

        <div class="div-section-heading"><h4>Add New Device Type</h4></div>

        <div class="div-section-body">
            <table class="table table-responsive table-hover">
                <thead>
                    <tr>
                        <td></td>
                        <td>
                            <h4>Details</h4>
                        </td>
                    </tr>

                </thead>
                <tbody>
                    <tr class="ftco-animate">
                        <td><label>Name</label></td>
                        <td>@Html.EditorFor(model => model.DeviceType.Name, new { htmlAttributes = new { @class = "form-control ftco-animate", @required = "required"})</td>
                        <td><input type="text" name="DeviceType.Name" class="form-control " required /></td>
                    </tr>

                    <tr class="ftco-animate">
                        <td></td>
                        <td><input type="submit" value="Save" class="form-control greenButtonEdged" /></td>

                    </tr>

                </tbody>
            </table>
        </div>

    </div>
}

