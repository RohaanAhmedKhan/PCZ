@model IEnumerable<PCZ.Models.Messages>

@{
    ViewBag.Title = "Index";
}

<div class="div-section">

    <div class="div-section-heading" style="display:flex; justify-content:space-between">
        <h4>Messages</h4>
        <h4 style="margin-right:3px">Unread: @Model.Where(m => !m.IsRead).Count() </h4>
    </div>

    <div class="row div-body">
        <div class="col-sm-12">

            <table class="table table-striped table-bordered table-responsive" id="dtTbl1">

                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Recieved-On
                        </th>
                        <th>
                            Message
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr style="@( !item.IsRead ? "background-color: #b2cee1; color:#034878; font-weight: bold" : "")">
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td data-sort="@item.RecievedTime">
                                @item.RecievedTime.ToString("dd/MM/yyyy hh:mm:ss")
                            </td>
                            <td class="cut-text-td">
                                @Html.DisplayFor(modelItem => item.Message)
                            </td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>

@section scripts{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/zf-6.4.3/dt-1.10.22/datatables.min.css" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/zf-6.4.3/dt-1.10.22/datatables.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.11/sorting/date-eu.js" type="text/javascript"></script>

    <script type="text/javascript">

        $(document).ready(function () {
            $('#dtTbl1').DataTable({
                "pagingType": 'full_numbers',
                "order": [[2, "desc"]], //or asc
                "columnDefs": [{ "targets": 2, "type": "date" }]
            });
        });

    </script>

}