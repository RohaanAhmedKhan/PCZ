@model PCZ.ViewModels.BrandsVM
@{
    ViewBag.Title = "Brands";
}
<div class="row">

    <div class="col-xs-10 col-sm-7 col-lg-4 col-md-5" style="float:none !important; margin:0 auto !important">

        @if (Model.Action == 1) {



            if (Model != null && Model.ErrorMessage != null) {<label style="color:red"><b>Error: </b> @Model.ErrorMessage</label>}


        using (Html.BeginForm("Update", "Brands", FormMethod.Post, new { })) {
            <div class="div-section">
                <div class="div-section-heading"><h4>Edit Brand</h4></div>

                <div class=" div-section-body">

                    <table class="table table-responsive table-hover">
                        <thead>
                            <tr>
                                <td></td>
                                <td>
                                    <h4>Details</h4>
                                </td>
                            </tr>

                        </thead>
                        <tbody>
                            <tr class="ftco-animate">
                                <td><label>Id</label></td>
                                <td><input type="text" name="Brand.Id" value="@Model.Brand.Id" disabled class="form-control ftco-animate" required /></td>
                            </tr>
                            <tr class="ftco-animate">
                                <td><label>Name</label></td>
                                <td><input type="text" name="Brand.Name" value="@Model.Brand.Name" class="form-control ftco-animate" required /></td>
                            </tr>
                            <tr>
                                <td><label>Category</label></td>
                                <td>@Html.DropDownListFor(m => m.Brand.TypeId, Model.CategoryList, new {@class = "ddSearch" })</td>
                            </tr>

                            <tr class="ftco-animate">
                                <td>
                                    <input type="hidden" name="Brand.Id" value="@Model.Brand.Id" />
                                </td>
                                <td><input type="submit" value="Save" class="form-control greenButtonEdged" /></td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

        }


    }
    else {


        if (Model != null && Model.ErrorMessage != null) {<label style="color:red"><b>Error: </b> @Model.ErrorMessage</label>}

    using (Html.BeginForm("Create", "Brands", FormMethod.Post, new { })) {
        <div class="div-section">

            <div class="div-section-heading"><h4>Add New Brand</h4></div>

            <div class="div-section-body">
                <table class="table table-responsive table-hover">
                    <thead>
                        <tr>
                            <td></td>
                            <td>
                                <h4>Details</h4>
                            </td>
                        </tr>
                    </thead>

                    <tbody>
                        <tr class="ftco-animate">
                            <td><label>Name</label></td>
                            <td>@Html.EditorFor(m => m.Brand.Name)</td>
                        </tr>
                        <tr>
                            <td><label>Category</label></td>
                            <td>@Html.DropDownListFor(m => m.Brand.TypeId, Model.CategoryList, new {@class = "ddSearch" })</td>
                        </tr>
                        <tr class="ftco-animate">
                            <td></td>
                            <td><input type="submit" value="Save" class="form-control greenButtonEdged" /></td>

                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    }

}
    </div>

</div>

<div class="div-section">
    <div class="div-section-heading" style="display:flex; justify-content:space-between">
        <h4>Brands List</h4>
        <h4 style="float:right"><a class="btn-primary" href="~/Admin/Brands/">Create New</a></h4>
    </div>


    <div class="row div-body">
        <div class="col-sm-12">

            <table class="table table-striped table-bordered table-responsive" id="dtTbl">
                @*<table class="" id="dtTbl">*@
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dt in Model.Brands) {
                        <tr>
                            <td>@dt.Id</td>
                            <td>@dt.Name</td>
                            <td>@dt.DeviceType.Name</td>
                            <td><a href="~/admin/Brands/index?act=1&id=@dt.Id">Edit</a> Delete</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>

