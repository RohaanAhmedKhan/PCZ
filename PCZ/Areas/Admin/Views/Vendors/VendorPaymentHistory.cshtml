@model PCZ.ViewModels.HistoryViewModal
@{
    ViewBag.Title = "Payment";

}
<div class="div-section">
    <div class="div-section-heading"><h4>Payment</h4></div>

    <div class="row div-section-body">

        <div class="col-lg-2">
            <img src="@Model.ImgURl" height="150" style="margin:5px; max-width:150px; border-radius:5px" />
            <label style="margin:0px auto">@Model.BuisinessName</label>
        </div>

        <div class="col-lg-4">
            <table class="table">
                <caption><label>Payment Detail</label></caption>
                <tr>
                    <td><label>Paid Jobs</label></td>
                    <td>@Model.paid</td>
                </tr>
                <tr>
                    <td><label>Paid Amount</label></td>
                    <td>@Model.pamount</td>
                </tr>
                <tr>
                    <td><label>UnPaid Jobs</label></td>
                    <td>@Model.unpaid</td>
                </tr>
                <tr>
                    <td><label>UnPaid Amount</label></td>
                    <td>@Model.upamount</td>
                </tr>
            </table>

        </div>
        <div class="col-lg-4">
            <label> Account Balance : <b> @Model.Balance </b> </label>
        </div>
    </div>


<div class="div-section">
    <div class="div-section-heading"><h4>All Due Payments</h4></div>

    <div class="row div-section-body">
        <div class="col-sm-12" style="padding:0 !important">

            <table class="table table-striped table-bordered table-responsive" id="dtTbl">
                <thead>
                    <tr>
                        <th width="8%">Invoice No</th>
                        <th width="8%">Amount to Pay</th>
                        <th width="8%">Amount Payed</th>
                        <th width="8%">Amount Remaining</th>
                        <th width="7%">Paid</th>
                        <th width="8%">Date Recieved</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dt in Model.payments)
                    {
                        <tr class="clk_index_table">
                            <td>@dt.JobNo</td>
                            <td>@dt.Payment_Amount.ToString("N0")</td>
                            <td>@dt.Recieved_Amount</td>
                            <td>@dt.Remaining_Amount</td>
                            @if (@dt.Paid == true)
                            {
                                <td>YES</td>
                            }
                            else
                            {
                                <td>NO</td>
                            }
                            @if (dt.DateRecieved != null)
                            {
                                <td>@dt.DateRecieved</td>
                            }
                            else
                            {
                                <td>-------------------</td>
                            }

                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>