@model PCZ.ViewModels.DevicesVM
@{
    ViewBag.Title = "Devices";
}
<div class="row">

    <div class="col-xs-10 col-sm-7 col-lg-4 col-md-5" style="float:none !important; margin:0 auto !important">

        @if (Model.Action == 1) {

            if (Model != null && Model.ErrorMessage != null) {<label style="color:red"><b>Error: </b> @Model.ErrorMessage</label>}

        using (Html.BeginForm("Update", "Devices", FormMethod.Post, new { })) {

            <div class="div-section">
                <div class="div-section-heading"><h4>Edit Device</h4></div>

                <div class=" div-section-body">

                    <table class="table table-responsive table-hover">
                        <thead>
                            <tr>
                                <td></td>
                                <td>
                                    <h4>Details</h4>
                                </td>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="ftco-animate">
                                <td><label>Id</label></td>
                                <td><input type="text" name="Device.Id" value="@Model.Device.Id" disabled class="form-control" required /></td>
                            </tr>
                            <tr class="ftco-animate">
                                <td><label>Name</label></td>
                                <td><input type="text" name="Device.Name" value="@Model.Device.Name" class="form-control" required /></td>
                            </tr>
                            <tr>
                                <td><label>Category</label></td>
                                <td>
                                    <select name="CategoryID" class="form-control ddSearch" onchange="cascade(this)">
                                        @foreach (var option in Model.CategoryList) {
                                            <option value="@option.Value" @(option.Selected ? "selected" : "" )>@option.Text</option>
                                        }
                                    </select>
                                </td>
                            </tr>

                            <tr>
                                <td><label>Brand</label></td>
                                <td>@Html.DropDownListFor(m => m.Device.BrandId, Model.BrandList, new { @id = "brandsdd", @class = "ddSearch form-control" })</td>
                            </tr>

                            <tr class="ftco-animate">
                                <td>
                                    <input type="hidden" name="Device.Id" value="@Model.Device.Id" />
                                </td>
                                <td><input type="submit" value="Save" class="form-control greenButtonEdged" /></td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>

        }


    }
    else {


        if (Model != null && Model.ErrorMessage != null) {<label style="color:red"><b>Error: </b> @Model.ErrorMessage</label>}

    using (Html.BeginForm("Create", "Devices", FormMethod.Post, new { })) {

                <div class="div-section">

            <div class="div-section-heading"><h4>Add New Device</h4></div>

            <div class="div-section-body">
                <table class="table table-responsive table-hover">
                    <thead>
                        <tr>
                            <td></td>
                            <td>
                                <h4>Details</h4>
                            </td>
                        </tr>
                    </thead>

                    <tbody>
                        <tr class="ftco-animate">
                            <td><label>Name</label></td>
                            <td>@Html.EditorFor(m => m.Device.Name)</td>
                        </tr>

                        <tr>
                            <td><label>Category</label></td>
                            <td>@Html.DropDownListFor(m => m.CategoryID, Model.CategoryList, new { @onchange = "cascade(this)", @class = "ddSearch form-control" })</td>
                        </tr>

                        <tr>
                            <td><label>Brand</label></td>
                            <td>@Html.DropDownListFor(m => m.Device.BrandId, Model.BrandList, new { @id = "brandsdd", @class = "ddSearch form-control" })</td>
                        </tr>
                        <tr class="ftco-animate">
                            <td></td>
                            <td><input type="submit" value="Save" class="form-control greenButtonEdged" /></td>

                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    }

}
    </div>

</div>

<div class="div-section">

    <div class="div-section-heading" style="display:flex; justify-content:space-between">
        <h4>Devices List</h4>
        <h4 style="float:right"><a class="btn-primary" href="~/Admin/Devices/">Create New</a></h4>
    </div>


    <div class="row div-body">
        <div class="col-sm-12">

            <table class="table table-striped table-bordered table-responsive" id="dtTbl">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Brand</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dt in Model.Devices) {
                        <tr>
                            <td>@dt.Id</td>
                            <td>@dt.Name</td>
                            <td>@dt.Brand.Name</td>
                            <td>@dt.Brand.DeviceType.Name</td>
                            <td><a href="~/admin/Devices/index?act=1&id=@dt.Id">Edit</a> Delete</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

</div>
@{

}
<script>
        function cascade(category) {
            $("#brandsdd").empty();

            $.ajax({

                type: 'POST',
                url: '@Url.Action("GetBrands", "Devices", new { Area = "Admin" })',
                dataType: 'json',
                data: { cat: category.value },
                success: function (series) {

                    $.each(series, function (i, s) {
                        $("#brandsdd").append('<option value="' + s.Value + '" >' + s.Text + '</option>');
                    });

                },

                error: function (ex) {
                    alert('Failed to retrieve data ' + ex.responseText);
                }

            });

            return false;
        }

</script>